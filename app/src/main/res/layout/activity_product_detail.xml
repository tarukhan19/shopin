<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homePage.views.Activity.ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_search"
            app:toolbar="@{1}"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10dp"
                    android:weightSum="1"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/heartIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_fav"
                            android:layout_marginBottom="@dimen/_8dp"
                            />
                        <ImageView
                            android:id="@+id/shareIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_share"
                            android:layout_marginTop="@dimen/_8dp"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.4"
                        android:background="@color/lite_grey"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dove"
                            />
                    </LinearLayout>



                </LinearLayout>


                <com.app.shopin.customview.BoldTextView
                    android:id="@+id/productnameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:text=""
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"

                    />



            </LinearLayout>

        </ScrollView>



    </LinearLayout>
</layout>