<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Orders.views.Activity.OrderHistoryDetailListingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lite_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:background="@color/white"
                android:elevation="@dimen/_5dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <com.app.shopin.customview.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Order ID:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sp" />

                            <com.app.shopin.customview.RegularTextView
                                android:id="@+id/orderidTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8dp"
                                android:gravity="center"
                                android:text="ABGD7483NJD"
                                android:textSize="@dimen/_12sp" />


                        </LinearLayout>

                        <com.app.shopin.customview.BoldTextView
                            android:id="@+id/dateTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="0.5"
                            android:gravity="end"
                            android:text="On Thu, 25 july 2020"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_8dp"
                        android:background="@color/semi_trans" />

                    <LinearLayout
                        android:id="@+id/storeLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="@dimen/_40dp"
                                    android:layout_height="@dimen/_40dp"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:background="@drawable/bluecircle"
                                    android:padding="@dimen/_8dp"


                                    tools:ignore="MissingConstraints">

                                    <ImageView
                                        android:id="@+id/shopIV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/white"
                                        android:src="@drawable/store"
                                        android:textSize="5sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8dp"
                                    android:orientation="vertical">

                                    <com.app.shopin.customview.BoldTextView
                                        android:id="@+id/storenameTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_3dp"
                                        android:background="@color/white"
                                        android:padding="@dimen/_2dp"
                                        android:text="Freshy's"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:id="@+id/ratingLL"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ratinggrayback"
                                            android:gravity="center"
                                            android:paddingStart="@dimen/_8dp"
                                            android:paddingEnd="@dimen/_8dp"
                                            android:paddingBottom="@dimen/_3dp">

                                            <ImageView
                                                android:layout_width="@dimen/_12dp"
                                                android:layout_height="@dimen/_12dp"
                                                android:src="@drawable/bigstar" />

                                            <com.app.shopin.customview.RegularTextView
                                                android:id="@+id/ratingTV"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_3dp"
                                                android:layout_marginEnd="@dimen/_5dp"
                                                android:text="4.5"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_10sp" />
                                        </LinearLayout>


                                        <com.app.shopin.customview.RegularTextView
                                            android:id="@+id/totalreviewTV"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3dp"
                                            android:text="124 Ratings"
                                            android:textColor="@color/darkgray"
                                            android:textSize="@dimen/_10sp" />
                                    </LinearLayout>


                                    <RatingBar
                                        android:id="@+id/ratingRB"
                                        style="@style/customRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5dp"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:isIndicator="true"
                                        android:maxHeight="@dimen/_40dp"
                                        android:numStars="5"

                                        android:stepSize="0.5" />

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/button1LL"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35dp"
                                android:layout_gravity="center"
                                android:background="@drawable/buttonbackground"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="1"

                                >

                                <com.app.shopin.customview.RegularTextView
                                    android:id="@+id/buttonTV1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/delivery"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sp" />

                                <ImageView
                                    android:id="@+id/buttonIV1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/next_black"
                                    android:tint="@color/white"
                                    tools:ignore="UseAppTint" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/button2LL"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5dp"
                                android:background="@drawable/buttonbackground"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="invisible"
                                android:weightSum="1"

                                >

                                <com.app.shopin.customview.RegularTextView
                                    android:id="@+id/buttonTV2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/delivery"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sp" />

                                <ImageView
                                    android:id="@+id/buttonIV2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:src="@drawable/next_black"
                                    android:tint="@color/white"
                                    tools:ignore="UseAppTint" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/productLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/productRV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:layout_marginBottom="@dimen/_8dp"
                            android:clipToPadding="false"

                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/_3dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_10dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_vertical">

                                <com.app.shopin.customview.RegularTextView
                                    android:id="@+id/minamountTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_8dp"
                                    android:layout_marginRight="@dimen/_8dp"
                                    android:src="@drawable/clock"
                                    android:text="Issue with items"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/_14sp"

                                    />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/next_black"
                                    app:tint="@color/colorPrimaryDark"

                                    />

                            </LinearLayout>


                            <com.app.shopin.customview.RegularTextView
                                android:id="@+id/totalpriceTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8dp"
                                android:layout_marginRight="@dimen/_8dp"
                                android:layout_weight="0.3"
                                android:background="@drawable/edittextbackgrnd"
                                android:gravity="center"
                                android:padding="@dimen/_5dp"
                                android:src="@drawable/clock"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sp"

                                />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/progressbarLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transgray"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp" />
        </LinearLayout>


    </RelativeLayout>

</layout>